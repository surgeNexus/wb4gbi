<%- include('../partials/header') %>

<div class="container d-flex justify-content-center">
    <div class="row">
        <h1>Manage Repeaters</h1>    
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col">
            <form action="/repeater/<%= repeater.id %>/edit?_method=PUT" method="POST" encType="multipart/form-data">
                <div class="mb-3">
                  <label for="freq" class="form-label">Frequency</label>
                  <input type="text" class="form-control" name="frequency" value="<%= repeater.frequency %>" id="freq" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Tone</label>
                  <input type="text" class="form-control" name="tone" value="<%= repeater.tone %>" id="exampleInputPassword1">
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Location</label>
                  <input type="text" class="form-control" name="location" value="<%= repeater.location %>" id="exampleInputPassword1">
                </div>
                <%- include('../partials/legend') %>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Brief Information (This will appear as one paragraph)</label>
                  <textarea rows="10" cols="70" class="form-control" name="statusText"><%= repeater.statusText %></textarea>
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Repeater Image</label>
                  <div class="d-flex justify-content-center">
                    <img class="edit-image" src="<%= repeater.image %>" alt="">
                  </div>
                  <br>
                  <input type="file" class="form-control" name="image" id="" value="<%= repeater.image %>">
                </div>
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" name="status" value="true" id="flexSwitchCheckDefault" <% if(repeater.status === true){ %> checked <% } %>>
                  <label class="form-check-label" for="flexSwitchCheckDefault">Repeater status. (Off air, On air)</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <br><hr>
            <form class="foot-room" action="/repeater/<%= repeater.id %>/delete?_method=DELETE" method="POST">
                <div class="text-center text-danger">
                    <h2>PLEASE USE WITH CAUTION!</h2>
                    <p>This action can not be undone.</p>
                </div>
                <div class="text-center">
                    <button class="btn btn-sm btn-danger" onclick="return ConfirmDelete()" type="submit">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>


<%- include('../partials/footer') %>