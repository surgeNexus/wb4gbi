<%- include('../partials/header') %>

<div class="container d-flex justify-content-center">
    <img src="/images/wb4gbiBanner.png" alt="WB4GBI Banner" class="banner-image">
</div>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-sm-12 head-room d-flex justify-content-center">
            <div class="card">
                <div class="card-header text-center">
                    <h1>Timothy E Berry</h1>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-center">
                        <img src="/images/tim.jpg" class="img-tim img-fluid" alt="Repeater Image">
                    </div>
                    <hr>
                    <div class="text-center">
                        <h2>WB4GBI</h2>
                        <br>
                        <p>214 ECHODALE LN</p>
                        <p>KNOXVILLE, TN 37920</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8 col-sm-12 head-room">
        <% if(currentUser) { %>
            <div>
                <p>
                  <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                    Add Article
                  </button>
                </p>
                <div class="collapse" id="collapseExample">
                  <div class="card card-body">
                    <form action="/about/" method="POST" encType="multipart/form-data">
                        <div class="mb-3">
                          <label for="exampleInputPassword1" class="form-label">Title</label>
                          <input type="text" class="form-control" name="title" id="">
                        </div>
                        <div class="mb-3">
                          <label for="exampleInputPassword1" class="form-label">Article Body</label>
                          <textarea id="htmeditor" class="form-control" name="text"></textarea><script src="https://htmeditor.com/js/htmeditor.min.js"      htmeditor_textarea="htmeditor"      full_screen="no"      editor_height="480"     run_local="no"> </script> 
                        </div>
                        <div class="mb-3">
                          <label for="exampleInputPassword1" class="form-label">Image</label>
                          <input type="file" class="form-control" name="image" id="">
                        <div class="text-center">
                            <button class="btn btn-md btn-primary" type="submit">Submit</button>
                        </div>
                    </form>
                  </div>
                </div>
            </div>
            <br>
        <% } %>
            <% abouts.forEach((about) => { %>
            <div class="foot-room">
                <div class="card">
                    <div class="card-header text-center">
                        <h1 class="text-center"><%= about.title %></h1>
                        <% if(currentUser) { %>
                        <a href="/about/<%= about.id %>/edit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5L13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175l-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                            </svg>
                        </a>
                        <% } %>
                    </div>
                    <div class="card-body">
                        <div>
                            <p><%- about.text %></p>
                        </div>
                        <% if(about.image || about.image2 || about.image3){ %>
                        <div class="row d-flex justify-content-center text-center">
                            <% if(about.image){ %>
                                <div class="col-md-4 col-sm-12">
                                    <img class="article-image-sm img-fluid" src="<%= about.image %>" alt="">
                                </div>
                            <% } %>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>
</div>

<%- include('../partials/footer') %>